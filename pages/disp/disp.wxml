<!-- disp.wxml -->
<scroll-view class="scrollarea" scroll-y type="list">
    
    <view class="container">
        <view class="cityselector card">
            <t-cell class="mb-16" title="选择城市" arrow hover note="{{cityText}}" bind:click="onCityPicker" />
            <t-picker visible="{{cityVisible}}" value="{{cityValue}}" data-key="city" title="选择城市" cancelBtn="取消" confirmBtn="确认" bindchange="onPickerChange" bindpick="onColumnChange" bindcancel="onPickerCancel">
                <t-picker-item options="{{citys}}" />
            </t-picker>
        </view>
        <view class='overall card'>
            <view class='title'>情况总览</view>
            <view class='circles'>
                    <view class="overallcircle">
                    <t-progress theme="circle" percentage='{{place.percentage}}' label='{{place.grade}}' color='{{place.color}}'  >
                        
                        </t-progress>
                        所在地感染风险
                        </view>
                    <view class="overallcircle">
                    <t-progress theme="circle" percentage='{{room.percentage}}' label='{{room.grade}}' color='{{room.color}}'  >
                        
                        </t-progress>
                        所在场所感染风险
                        </view>
            </view>
                
        </view>
        <t-divider/>
        <view class='showdetail card'>
            <t-tabs defaultValue="{{0}}" 
                bind:change="onTabsChange" 
                bind:click="onTabsClick" 
                t-class="custom-tabs" 
                t-class-content="custom-panel"
                animation='duration:3'>
                <t-tab-panel label="哨点信息" value="0" style="{{tabPanelstyle}}">
                    <t-cell title="单行标题" >
                                            <t-progress  percentage="80"  />
                    </t-cell>

                    <t-progress  percentage='{{place.percentage}}' label='1000000' />
                    <t-progress theme="plump" percentage="80" label='1000000' />
                    <t-progress theme="plump" percentage="80" label='1000000' />

                </t-tab-panel>
                <t-tab-panel label="省份信息" value="1" style="{{tabPanelstyle}}">{{city}}</t-tab-panel>
                <t-tab-panel label="场所信息" value="2" style="{{tabPanelstyle}}">
                    <t-row>
                        <t-col span="8" class="detailcard">
                            <view class="roomdata">25℃</view>
                            <view class="dataname">温度</view>
                        </t-col>
                        <t-col span="8" class="detailcard">
                            <view class="roomdata">44%</view>
                            <view class="dataname">湿度</view>
                        </t-col>
                        <t-col span="8" class="detailcard">
                            <view class="roomdata">8888ppm</view>
                            <view class="dataname">CO2浓度</view>
                        </t-col>
                    </t-row>
                    <t-row>
                        <t-col span="12" class="detailcard">
                            <view class="roomdata">较低</view>
                            <view class="dataname">感染风险值</view>
                        </t-col>
                        <t-col span="12" class="detailcard">
                            <view class="roomdata">中等</view>
                            <view class="dataname">防范等级</view>
                        </t-col>
                    </t-row>
                </t-tab-panel>
            </t-tabs>
            
        </view>
        
    </view>
    <view>
    <t-footer text="{{footerText}}" links="{{links}}"></t-footer>
    <t-footer text="{{footerText2}}"></t-footer>
    </view>
</scroll-view>